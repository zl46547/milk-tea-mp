.mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.mask .good-detail-modal {
  width: 90%;
  display: flex;
  flex-direction: column;
  border-radius: 12rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
}
.mask .good-detail-modal .cover {
  height: 320rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.mask .good-detail-modal .cover .image {
  width: 260rpx;
  height: 260rpx;
}
.mask .good-detail-modal .cover .btn-group {
  position: absolute;
  right: 10rpx;
  top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.mask .good-detail-modal .cover .btn-group image {
  width: 80rpx;
  height: 80rpx;
}
.mask .good-detail-modal .detail {
  width: 100%;
  min-height: 100rpx;
  max-height: 500rpx;
}
.mask .good-detail-modal .detail .wrapper {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.mask .good-detail-modal .detail .wrapper .basic {
  padding: 0 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}
.mask .good-detail-modal .detail .wrapper .basic .name {
  font-size: 28rpx;
  color: #5A5B5C;
  margin-bottom: 10rpx;
}
.mask .good-detail-modal .detail .wrapper .basic .tips {
  font-size: 24rpx;
  color: #878889;
}
.mask .good-detail-modal .detail .wrapper .properties {
  width: 100%;
  border-top: 2rpx solid #F5F5F5;
  padding: 10rpx 30rpx 0;
  display: flex;
  flex-direction: column;
}
.mask .good-detail-modal .detail .wrapper .properties .property {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  padding-bottom: -16rpx;
}
.mask .good-detail-modal .detail .wrapper .properties .property .title {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}
.mask .good-detail-modal .detail .wrapper .properties .property .title .name {
  font-size: 26rpx;
  color: #5A5B5C;
  margin-right: 20rpx;
}
.mask .good-detail-modal .detail .wrapper .properties .property .title .desc {
  flex: 1;
  font-size: 24rpx;
  color: #ADB838;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.mask .good-detail-modal .detail .wrapper .properties .property .values {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.mask .good-detail-modal .detail .wrapper .properties .property .values .value {
  border-radius: 8rpx;
  background-color: #F5F5F5;
  padding: 16rpx 30rpx;
  font-size: 26rpx;
  color: #919293;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}
.mask .good-detail-modal .detail .wrapper .properties .property .values .value.default {
  background-color: #ADB838;
  color: #ffffff;
}
.mask .good-detail-modal .action {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #F5F5F5;
  height: 120rpx;
  padding: 0 26rpx;
}
.mask .good-detail-modal .action .left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 20rpx;
  overflow: hidden;
}
.mask .good-detail-modal .action .left .price {
  font-size: 32rpx;
  color: #5A5B5C;
}
.mask .good-detail-modal .action .left .props {
  color: #919293;
  font-size: 24rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.mask .good-detail-modal .action .btn-group {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.mask .good-detail-modal .action .btn-group .number {
  font-size: 28rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
}
.mask .good-detail-modal .action .btn-group .btn {
  padding: 0;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  color: #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mask .good-detail-modal .action .btn-group .btn .iconfont {
  font-size: 20rpx;
}
.mask .good-detail-modal .action .btn-group .add-btn {
  background-color: #ADB838;
  color: #ffffff;
}
.mask .good-detail-modal .action .btn-group .icon-btn {
  color: #878889;
  background-color: #fff;
  border: 1rpx solid #878889;
}
.mask .good-detail-modal .add-to-cart-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ADB838;
  color: #ffffff;
  font-size: 28rpx;
  height: 80rpx;
  border-radius: 0 0 12rpx 12rpx;
}
